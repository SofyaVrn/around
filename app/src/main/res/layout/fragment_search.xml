<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">
    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom">
        <include layout="@layout/bottom_sheet_search"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBack"
            app:layout_dodgeInsetEdges="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:clickable="true"
            android:backgroundTint="?android:attr/windowBackground"
            app:tint="?android:attr/textColor"
            android:contentDescription="Back"
            app:layout_anchor="@+id/bottom_sheet_search"
            app:layout_anchorGravity="top|start"
            app:borderWidth="0dp"
            android:src="@drawable/arrow_back"
            app:useCompatPadding="true"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUserLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:backgroundTint="?android:attr/windowBackground"
        app:tint="?android:attr/textColor"
        android:contentDescription="User Location"
        app:borderWidth="0dp"
        android:src="@drawable/location_on"
        app:layout_anchor="@+id/mapview"
        app:layout_anchorGravity="top|right|end"
       />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:layout_gravity="end|bottom"
        android:backgroundTint="?android:attr/windowBackground"
        app:tint="?android:attr/textColor"
        android:contentDescription="Route"
        app:borderWidth="0dp"
        android:src="@drawable/route"
        app:layout_anchor="@+id/mapview"
        app:layout_anchorGravity="top|left|start"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDriving"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="?android:attr/textColor"
        android:contentDescription="Route"
        app:borderWidth="0dp"

        app:rippleColor="@android:color/transparent"

        android:src="@drawable/directions_car"
        app:layout_anchor="@+id/fabRoute"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_anchorGravity="bottom|center_horizontal"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPedestrian"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="?android:attr/textColor"
        android:contentDescription="Route"
        app:borderWidth="0dp"

        app:rippleColor="@android:color/transparent"

        android:src="@drawable/directions_walk"
        app:layout_anchor="@+id/fabDriving"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_anchorGravity="bottom|center_horizontal"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMasstransit"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="?android:attr/textColor"
        android:contentDescription="Route"
        app:borderWidth="0dp"

        app:rippleColor="@android:color/transparent"

        android:src="@drawable/directions_bus"
        app:layout_anchor="@+id/fabPedestrian"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_anchorGravity="bottom|center_horizontal"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/viewRoute"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="14dp"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imageButtonClose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:background="@null"
                android:scaleType="centerCrop"
                app:tint="?android:attr/textColor"
                android:src="@drawable/cancel"/>
            <TextView
                android:id="@+id/textDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageButtonBack"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:text="Расстояние:"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageButtonBack"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Время:"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>