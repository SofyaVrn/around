<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/bottom_sheet_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="textStart" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imageObject"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/imgFavorite"
                android:background="#40000000"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"
                android:layout_alignTop="@+id/imageObject"
                android:layout_alignRight="@+id/imageObject"
                android:src="@drawable/favorite_border"
                app:tint="@color/white"
                android:layout_margin="2dp"/>
            <ImageView
                android:id="@+id/imgAccessibility"
                android:background="#40000000"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@+id/imageObject"
                android:layout_alignRight="@+id/imageObject"
                app:tint="@color/white"
                android:src="@drawable/accessibility"
                android:layout_margin="2dp"/>
            <!-- android:src="@drawable/baseline_accessibility_white_24dp"-->

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/button_objects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/relativeLayoutCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/imageButtonCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_main"
                    android:layout_centerHorizontal="true"
                    app:tint="?android:attr/textColor"
                    android:src="@drawable/call"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayoutWebsite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/imageButtonWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_main"
                    android:layout_centerHorizontal="true"
                    app:tint="?android:attr/textColor"
                    android:src="@drawable/website"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayoutShare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/imageButtonShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_main"
                    android:layout_centerHorizontal="true"
                    app:tint="?android:attr/textColor"
                    android:src="@drawable/share"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:textAlignment="textStart"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>